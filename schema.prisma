generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id               String   @id @default(uuid())
  title            String
  shortDescription String
  description      String   @db.Text
  price            Decimal  @db.Decimal(10, 2)
  imageUrl         String
  category         String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([category])
  @@index([createdAt])
}

